<form>
	<h3>{{character.actor.name}}</h3>
	<input type="text" id="query" data-dtype="String" placeholder="Search for something..." />
	{{#if results}}
		{{#each results}}
			<div class="character-search-result">
				<div class="flexrow">
					<div class="title flex2">{{doc.title}}</div>
					<div class="type flex3">{{doc.type}}</div>
					<div class="description">
						{{editor enrichedDescription target="content" button=false editable=false}}
					</div>
				</div>
			</div>
		{{/each}}
	{{else}}
		<p>No results found</p>
	{{/if}}
</form>